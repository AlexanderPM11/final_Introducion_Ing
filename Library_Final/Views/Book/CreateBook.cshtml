@using Library.Core.Applicantion.ViewModels.Book
@model List<BookViewModel>
@{
    ViewData["Title"] = "Registrar Libros";
}

 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <div class="container">
        <h1 class="text-center">Registro de libros</h1>
        <br>
        <form class="row g-3">
            <div class="col-md-6">
              <label for="Titulo_Book" class="form-label">Titulo</label>
              <input type="text" class="form-control" id="Titulo_Book">
            </div>
            <div class="col-md-6">
              <label for="Autor" class="form-label">Autor</label>
              <select id="Autor" class="form-select">
                <option selected>Elige el Autor...</option>
                <option>...</option>
              </select>
            </div>
            <div class="col-4">
              <label for="Number_Page" class="form-label">Numero de Paginas</label>
              <input type="number" class="form-control" id="Number_Page">
            </div>
            <div class="col-md-4">
                <label for="Genero" class="form-label">Genero</label>
                <select id="Genero" class="form-select">
                  <option selected>Elige el Genero...</option>
                  <option>Aventuras</option>
                  <option>Ciencia ficción</option>
                  <option>Terror</option>
                  <option>Acción</option>
                  <option>Comedia</option>
                  <option>Romance</option>
                  <option>Suspenso</option>
                  <option>Mas...</option>
                </select>
            </div>
            <div class="col-4">
              <label for="Fecha" class="form-label">Fecha de publicacion</label>
              <input type="date" class="form-control" id="Fecha">
            </div>
            <div class="col-md-4">
              <label for="Condicion" class="form-label">Condicion del libro</label>
              <input type="text" class="form-control" id="Condicion">
            </div>

            <div class="col-md-2">
              <label for="Price" class="form-label">Precio del libro</label>
              <input type="number" class="form-control" id="price" placeholder="RD$">
            </div>
            <div class="col-12">
              <div class="form-check">
              </div>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-success">Crear</button> 
              <button type="submit" class="btn btn-danger">Cancelar</button>
            </div>
          </form>    

    </div>